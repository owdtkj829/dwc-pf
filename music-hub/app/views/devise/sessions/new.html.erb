<div class="container">
    <div class="devise-container"></div>
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <h3 class="devise-title-sm-login" align="center"><strong>ログインページ</strong></h3>
            <div class="col-xs-8 col-xs-offset-2">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group">
                    <table class="table devise-table">
                        <tr>
                            <th class="col-xs-3">メールアドレス</th>
                            <td>
                                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                            </td>
                        </tr>
                        <tr>
                            <th class="col-xs-3">パスワード</th>
                            <td>
                                <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
                            </td>
                        </tr>
                        <tr>
                            <th></th>
                            <td>
                                <%= link_to "⇒パスワードを忘れた方はこちら", new_password_path(resource_name), class: "new-password"%>
                            </td>
                        </tr>
                        <tr>
                            <td align="center" colspan="2">
                                <%= f.submit "　　　ロ　グ　イ　ン　　　" ,class: "btn btn-md btn-default" %>
                            </td>
                        </tr>
                    </table>
                </div>
                <% end %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
            <div class="col-xs-8 col-xs-offset-2">
                <p class="devise-title-sm">登録がお済みでない方</p>
                <h4>
                    <%= link_to "こちら", new_registration_path(resource_name)%>から新規登録を行ってください。</h4>
            </div>
        </div>
    </div>
</div>