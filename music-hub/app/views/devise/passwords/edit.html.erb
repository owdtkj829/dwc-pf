<div class="container">
    <div class="devise-container"></div>
    <div class="row">
        <h3 class="text-center"><strong>パスワード再設定</strong></h3>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="col-xs-8 col-xs-offset-2">
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <%= f.hidden_field :reset_password_token %>
                <div class="form-group">
                    <table class="table devise-table">
                        <tr>
                            <th class="col-xs-3">新しいパスワード(6文字以上)</th>
                            <td>
                                <% if @minimum_password_length %>
                                <em>(
                                    <%= @minimum_password_length %> characters minimum)</em><br />
                                <% end %>
                                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control"%>
                            </td>
                        </tr>
                        <tr>
                            <th class="col-xs-3">新しいパスワード(確認用)</th>
                            <td>
                                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="4" align="center">
                                <%= f.submit "パスワード再設定" ,class: "btn btn-primary"%>
                            </td>
                        </tr>
                    </table>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>