<div class="container">
    <div class="row"></div>
    <div class="row">
        <div class="col-xs-3">
            <h2 align="center">マイカレンダー</h2>
            <%= form_for(@event) do |f| %>
            <div class="row">
                <h5>アーティスト</h5>
                <%= collection_select :artist_event, :id, @favorites, :artist_id, :name,  {}, class: 'form-control'%>
            </div>
            <div class="row">
                <h5>タイトル</h5>
                <%= f.text_field :title ,class: 'form-control'%>
            </div>
            <div class="row">
                <h5>開始</h5>
                <%= f.datetime_field :start ,class: 'form-control'%>
            </div>
            <div class="row">
                <h5>終了</h5>
                <%= f.datetime_field :end ,class: 'form-control'%>
            </div>
            <div class="row">
                <h5>シェア</h5>
                <%= f.select :share, [["シェアする", "シェアする"], ["シェアしない", "シェアしない"]], {include_blank: "選択して下さい"}, {class: 'form-control'} %>
            </div>
            <div class="row">
                <h5>会場</h5>
                <%= f.text_field :venue ,class: 'form-control'%>
            </div>
            <div class="row">
                <h5>URL</h5>
                <%= f.url_field :url ,class: 'form-control'%>
            </div><br>
            <div class="row">
                <h5>メモ</h5>
                <%= f.text_area :memo ,class: 'form-control'%>
            </div>
            <div class="row event-new-btn">
                <%= f.submit ' 追 加 す る ',class: 'btn btn-primary col-xs-12' %>
            </div>
            <% end %>
        </div>
        <div class="col-xs-9">
            <div id="calendar"></div>
            <div id="inputEditForm">
                <%= render 'events/edit', events: @events %>
            </div>
        </div>
    </div>
</div>
<!-- カレンダーjavascript -->
<script>
$(function() {
    // 画面遷移を検知
    $(document).on('turbolinks:load', function() {
        if ($('#calendar').length) {

            function Calendar() {
                return $('#calendar').fullCalendar({});
            }

            function clearCalendar() {
                $('#calendar').html('');
            }

            $(document).on('turbolinks:load', function() {
                eventCalendar();
            });
            $(document).on('turbolinks:before-cache', clearCalendar);

            $('#calendar').fullCalendar({
                //events.jsonを参照させる（getの際にパラメータとして@user.idを持たせる）
                events: '/events.json?user_id=<%=@user.id%>',
                //カレンダー上部を年月で表示させる
                titleFormat: 'YYYY年 M月',
                //曜日を日本語表示
                dayNamesShort: ['日', '月', '火', '水', '木', '金', '土'],
                //ボタンのレイアウト
                header: {
                    left: 'today prev,next',
                    center: 'title',
                    right: 'month agendaDay'
                },
                //終了時刻がないイベントの表示間隔
                defaultTimedEventDuration: '03:00:00',
                buttonText: {
                    prev: '前',
                    next: '次',
                    prevYear: '前年',
                    nextYear: '翌年',
                    today: '今日',
                    month: '月',
                    week: '週',
                    day: '日'
                },
                selectable: true, // 選択可
                selectHelper: true, // 選択時にプレースホルダーを描画
                ignoreTimezone: false, // 自動選択解除
                navLinks: true,
                businessHours: true,
                eventLimit: true,
            
                timeZone: 'Asia/Tokyo',
                //スケジュールの時間表示を２４時間に
                timeFormat: "HH:mm",
                //スケジュールの色を変える
                eventColor: '#87cefa',
                //スケジュールの文字色を変える
                eventTextColor: '#000000',
                disableDragging: true,
                allDay: true,
                // event クリックで編集、削除
                eventClick: function(calEvent, jsEvent, view) {
                    jsEvent.preventDefault();
                    $(`#inputScheduleEditForm${calEvent.id}`).modal('show');
                },

                eventMouseover: function(event, jsEvent, view) {
                    jsEvent.preventDefault();
                }
            });
        }
    });
});
</script>