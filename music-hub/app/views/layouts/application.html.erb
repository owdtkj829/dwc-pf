<!DOCTYPE html>
<html>

<head>
    <title>music hub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<body data-turbolinks="false" id="top-background">
    <header>
        <div class="container">
            <div class="row-header-text">
                <% if user_signed_in? %>
                <!--if文でログイン時とログアウト時の表示を変更-->
                <%= link_to image_tag('logo.png',  class: 'headerlogo'), root_path %>
                <div id="sp-menu">
                    <ul class="nav nav-pills navbar-right">
                        <li class="topmenu" href="#">
                            <%= link_to ' My Page ', user_path(current_user)%>
                        </li>
                        <li class="topmenu" href="#">
                            <%= link_to ' Artists ', artists_path%>
                        </li>
                        <li class="topmenu" href="#">
                            <%= link_to ' Search ', root_path%>
                        </li>
                        <li class="topmenu" href="#">
                            <%= link_to ' Logout ', destroy_user_session_path, method: :delete, data: { confirm: 'ログアウトしますか？' }%>
                        </li>
                    </ul>
                </div>
                <div id="hm-icon">
                    <a class="menu-trigger" href="#">
                        <span></span>
                        <span></span>
                        <span></span>
                    </a>
                </div>
                <% else %>
                <%= link_to image_tag('logo.png', class: 'headerlogo'), root_path %>
                <div id="sp-menu">
                    <ul class="nav nav-pills">
                        <li class="topmenu" href="#">
                            <%= link_to ' Top ', root_path %>
                        </li>
                        <li class="topmenu" href="#">
                            <%= link_to ' About ', about_path %>
                        </li>
                        <li class="topmenu" href="#">
                            <%= link_to ' Sign Up ',new_user_registration_path %>
                        </li>
                        <li class="topmenu" href="#">
                            <%= link_to ' Log In ', new_user_session_path %>
                        </li>
                        <% end %>
                    </ul>
                </div>
                <div id="hm-icon">
                    <a class="menu-trigger" href="#">
                        <span></span>
                        <span></span>
                        <span></span>
                    </a>
                </div>
            </div>
        </div>
    </header>
    <%= yield %>
</body>

</html>