<div class="container">
    <div class="row">
        <div class="col-xs-3">
            <h2>アーティスト情報</h2>
            <table class="table">
                <div class="row">
                    <tr>
                        <th>
                            <%= attachment_image_tag @artist, :image,size:"100x100", fallback: "no_image.jpg" %>
                        </th>
                    </tr>
                    <th>name</th>
                    <th>
                        <%= @artist.name %>
                    </th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th>
                            <%= @artist.explanation %>
                        </th>
                    </tr>
                    <tr>
                        <td id="favorite-<%= @artist.id %>">
                            <%= render partial: "favorite", locals: { artist: @artist } %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <%= link_to 'みんなのおすすめへ', artist_recommends_path(@artist.id), class:"btn btn-success col-xs-12"%>
                        </td>
                    </tr>
                    <% if @user.id == current_user.id %>
                    <tr>
                        <td>
                            <% if @artist.user_id == current_user.id%>
                            <%= link_to '編集', edit_artist_path(@artist.id), class:"btn btn-success col-xs-12"%>
                            <% end %>
                        </td>
                    </tr>
                    <%end%>
                </div>
            </table>
        </div>
        <div class="col-xs-9">
            <div id="artistcalendar"></div>
        </div>
    </div>